  gem "activerecord", "~> 3.2", :require => "active_record"
  gem "activesupport", "~> 3.2", :require => "active_support"

  gem "sqlite3", :platforms => [:ruby]
  gem "activerecord-jdbcsqlite3-adapter", :platforms => [:jruby]
end

